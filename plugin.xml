<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.streethawk.plugin2" version="1.6.1" xmlns="http://apache.org/cordova/ns/plugins/1.0">
    <name>Streethawk</name>
    <description>      
    <p><a href="http://www.streethawk.com">Streethawk</a> is a mobile engagement automation library for your smartphone and tablet apps. Engage users in the right time using push messaging, emails and sms, segment your user base, create geofences to trigger location based campaigns or ibeacons for proximity based campaigns,measure share and measure app virality and organic growth, deeplinking and app indexing, mobile analytics measure campaign performance and more. StreetHawk supports both iOS and Android devices..</p>
    <a href="mailto:support@streethawk.com">Support</a> 
    </description>
	    
    <license>Apache 2.0</license>
    <keywords>push,push notifications,push notifications,phonegap,push message, push messaging,notification,segments,emails,sms,segments,geofence,location,beacon,beacons,ibeacon,ibeacons,crash reports,analysis,mobile analytics,retention,retain,users,user,analytics,engagement,adm,engage,measure,optimize,android,ios,marketing,rate,AB spilit,segments,campaign,campaigns,crash reports,crash,reports,geofencing,uninstall,uninstalls,multistep,tag,tagging,location,usage,bluetooth,sessions,session,count,in app,web,url,feeds,simple,push,plugin,gcm,apns,deeplink,deeplinking,i</keywords>
    
    
    <dependency id="com.google.playservices" />
    <preference name="APP_KEY" />
    <preference name="URL_SCHEME"/>
	<js-module name="Streethawk" src="www/Streethawk.js">
		<clobbers target="cordova.plugins.Streethawk"/>
	</js-module>
	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="Streethawk">
				<param name="android-package" value="com.streethawk.plugin.Streethawk"/>
			</feature>
		</config-file>
		
		<config-file target="AndroidManifest.xml" parent="/*/application/activity">
        <intent-filter>
            <data android:scheme="$URL_SCHEME"/>
            <action android:name="android.intent.action.VIEW" />
            <category android:name="android.intent.category.DEFAULT" />
            <category android:name="android.intent.category.BROWSABLE" />
        </intent-filter>
    </config-file>
		
		
